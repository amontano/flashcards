<p>
  <b>Title:</b>
  <%=h @deck.title %>
</p>
<% cards = @deck.cards
   if !cards.empty? %>
     <p><b>Cards:</b>
<%=  link_to 'Study cards', deck_cards_path(@deck) %>
     </p>
<%   authorized_only hash_for_edit_deck_card_path do %>
     <table>
       <tr>
         <th>Question</th>
         <th>Answer</th>
       </tr>
<%     cards.each do |card| %>
       <tr>
         <td><%=h card.question %></td>
         <td><%=h card.answer %></td>
         <td><%= link_to 'Show', deck_card_path(@deck, card) %></td>
       </tr>
<%     end %>
     </table>
<%   end 
end %>
<p>
<% previous = false
   authorized_only hash_for_new_deck_card_path do 
	 previous = true %>
<%=  link_to 'New card', new_deck_card_path(@deck) %>
<% end
   authorized_only hash_for_edit_deck_path do %>
<%=  '|' if previous %>
<%=  link_to 'Edit deck', edit_deck_path(@deck) %>
<%   previous = true
   end
   authorized_only hash_for_deck_path(:action => 'destroy') do %>
<%=  '|' if previous %>
<%=  link_to 'Delete deck', @deck, :confirm => 'Are you sure?', :method => :delete %>
<%   previous = true
   end %>
<%= '|' if previous %>
<%= link_to 'Back to all decks', decks_path %>
</p>