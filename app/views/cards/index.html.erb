<h1>Random card</h1>
<p><b><%= Card.human_attribute_name('question').s %>:</b><br/>
<%= @card.question %>
</p>
<div id="answer_div" style="display:none">
</div>
<div id="see_answer_div">
<p><%= link_to_remote ts('see.record', :what => Card.human_attribute_name('answer').downcase), :url => deck_card_path(@deck, @card), :method => :get %></p>
</div>
<p>
<%= link_to ts('back.to', :what => @deck.title), deck_path(@deck) %>
</p>